<% if (locals.success && locals.success.length > 0) { %>
    <% locals.success.forEach(msg => { %>
        <div class="alert alert-success alert-dismissible fade show col-3 fixed-top mt-3 mx-auto" role="alert">
            <%= msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% }) %>
<% } %>

<% if (locals.error && locals.error.length > 0) { %>
    <% locals.error.forEach(msg => { %>
        <div class="alert alert-danger alert-dismissible fade show col-3 fixed-top mt-3 mx-auto" role="alert">
            <%= msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% }) %>
<% } %>
